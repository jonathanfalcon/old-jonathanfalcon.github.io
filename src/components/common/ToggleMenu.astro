---
import { Icon } from 'astro-icon';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = 'Toggle Menu',
  class:
    className = 'ml-1.5 text-slate dark:text-white hover:bg-slate/10 dark:hover:bg-white/20 rounded-lg text-sm md:p-2.5 p-2 inline-flex items-center transition duration-300',
  iconClass = 'w-6 h-6 icon-bold',
  iconName = 'tabler:menu',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
  <Icon name={iconName} class={iconClass} optimize={false} />
</button>
