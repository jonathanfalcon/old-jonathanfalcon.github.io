---
import { Picture } from "@astrojs/image/components";
import blurHashImage from '~/utils/blur';
const {src, aspectRatio = '16:9', alt} = Astro.props;

---
<Picture src={src}
         widths={[900, 1400, 2000]}
         aspectRatio={aspectRatio}
         alt={alt}
         decoding='async'
         style={`aspect-ratio: ${aspectRatio.replace(':', '/')}; ${await blurHashImage(src.src)}`}
/>
