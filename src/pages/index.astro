---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero3 from '~/components/widgets/Hero3.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
  canonical: 'https://jonathanfalcon.com',
};
---

<Layout {meta}>

  <Hero3
    callToAction={{ text: "Let's Connect", href: 'https://www.linkedin.com/in/jqfalcon/', icon: 'simple-icons:linkedin' }}
    callToAction2={{ text: 'Why Me?', href: '#why-me', icon: 'ph:arrow-down-bold'}}
    image={{ src: import('../assets/images/profile.jpg'), alt: 'Jonathan Falcon smiling and not looking directly at camera. Backdrop is of Texas State University' }}
    subtitle="As a marketing analyst, I leverage my multidisciplinary background to give you the most holistic understanding of your customers."
  >
    <Fragment slot="title">
      Hi, I'm <br />
      <span class="text-primary-700 dark:text-primary-500"> Jonathan Falcon</span>
    </Fragment>

    
  </Hero3>

  <Features
    title="Why me?"
    subtitle="You need someone who's flexible enough to run the analyses and also effectively communicate the results."
    background="bg-gray-100 dark:bg-slate-800"
    items={[
      {
        title: 'Quant + Qual',
        description:
          'A unique blend of quantitative and qualitative skills allow a holistic and defensible understanding of the problem.',
        icon: 'ph:magnifying-glass-bold',
      },
      {
        title: 'Curious',
        description:
          'Ever wonder how something works? Knowing how something works is sometimes just as important, and that\'s just exactly drives me.',
        icon: 'ph:brain-bold',
      },
      {
        title: 'Resourceful',
        description:
          'No data? No problem. I strive to make the fullest use of resources at hand, so I can always accomplish my goal.',
        icon: 'mdi:lightbulb-on',
      },
      {
        title: 'Multidisciplinary',
        description:
          'A unique blend of economics, finance, and marketing create a unique yet harmonic perspective and method of problem-solving.',
        icon: 'ph:stack-fill',
      },
    ]}
  />

  <HighlightedPosts
    title="Check out some of my work"
    postIds={[
      'projects/2022-mccombs-marketing-challenge.mdx',
      'projects/cleaning-the-iowa-liquor-sales-dataset.mdx',
    ]}
    allPostsText="View more"
    background = "bg-white dark:bg-slate"
  />
  
  
</Layout>
