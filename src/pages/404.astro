---
import Layout from '~/layouts/PageLayout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import { getImage } from '@astrojs/image';

const title = `Error 404`;
---
<Layout meta={{ title }}>
  <section class={`flex items-center h-[calc(100vh-150px)] py-16 bg-center bg-cover bg-[url("/404.webp")]`}>
    <div class="container flex flex-col items-center justify-center px-20 mx-auto my-8">
      <div class="max-w-md text-center drop-shadow">
        <h2 class="mb-0 md:mt-0 mt-20 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-white">404</span>
        </h2>
        <p class="text-xl text-white mt-4 mb-8">Sorry, chief, we couldn't find that page.</p>
        
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn btn-secondary ml-4 text-white">Back to Home</a>

        <a rel="noopener noreferrer" href="https://unsplash.com/@jonathanfalcon" class="mt-5 btn ml-4 text-white hover:text-rich-black dark:hover:text-white">More Images</a>
      </div>
    </div>
  </section>
</Layout>
