---
import Layout from '~/layouts/PageLayout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import { getImage } from '@astrojs/image';
import { Icon } from "astro-icon";

const title = `Error 404`;
---
<Layout meta={{ title }}>
  <section class={`flex items-center min-h-[calc(100svh-60px)] bg-center bg-cover bg-[url("/404.webp")]`}>
    <div class="container flex flex-col items-center justify-center px-20 mx-auto my-8">
      <div class="max-w-xl text-center drop-shadow">
        <h2 class="mb-0 md:mt-0 mt-28 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-white">404</span>
        </h2>
        <p class="text-xl text-white mt-4 mb-10">Sorry, chief, we couldn't find that page.</p>
        
        <div class="lg:flex grid lg:gap-10 gap-6">
          <a rel="noopener noreferrer" href={getHomePermalink()} class="btn btn-primary md:text-xl text-lg font-normal">Back to Home<Icon name="ph:house-fill" class="w-6 h-6 ml-3"/></a>
          <a rel="noopener noreferrer" href="https://unsplash.com/@jonathanfalcon" class="btn border-white text-white hover:bg-white hover:text-black dark:border-white md:text-xl text-lg">More Images<Icon name="simple-icons:unsplash" class="w-5 h-5 ml-4"/></a>
        </div>
      </div>
    </div>
  </section>
</Layout>
